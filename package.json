{
  "name": "farmlokal-backend-assignment",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:all": "concurrently \"npm run dev\" \"npm --prefix frontend run dev\"",
    "seed": "tsx scripts/seed.ts",
    "db:indexes": "tsx scripts/indexes.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.1",
    "mongodb": "^6.8.0",
    "pino": "^9.3.2",
    "pino-http": "^9.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "concurrently": "^9.0.0",
    "eslint": "^8.57.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
